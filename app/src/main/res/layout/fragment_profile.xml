<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context=".ProfileFragment">
<LinearLayout
    android:id="@+id/profile_page"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:text="My profile"
        android:textSize="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:src="@drawable/message"
        android:layout_marginStart="200dp"
        android:contentDescription="This button might open another category"
        />
    </LinearLayout>


    <ImageView
        android:id="@+id/textView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/profile_page"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="62dp"
        android:fontFamily="@font/krona_one"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/editTextPassword"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/edit_text_no_underline"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Like"
        android:padding="20dp"
        android:paddingStart="30dp" />

    <ImageView
        android:id="@+id/imageViewShowPassword"
        android:layout_width="58dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@id/editTextPassword"
        android:layout_alignBottom="@id/editTextPassword"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="11dp"
        android:contentDescription="Show Password"
        android:src="@drawable/like" />




    <TextView
        android:id="@+id/editTextPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_no_underline"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Like"
        android:padding="20dp"
        android:paddingStart="30dp" />

    <ImageView
        android:id="@+id/imageViewShowPassword2"
        android:layout_width="58dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@id/editTextPassword2"
        android:layout_alignBottom="@id/editTextPassword2"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="11dp"
        android:contentDescription="Show Password"
        android:src="@drawable/like" />




    <TextView
        android:id="@+id/editTextPassword3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPassword2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_no_underline"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Like"
        android:padding="20dp"
        android:paddingStart="30dp" />

    <ImageView
        android:id="@+id/imageViewShowPassword3"
        android:layout_width="58dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@id/editTextPassword3"
        android:layout_alignBottom="@id/editTextPassword3"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="11dp"
        android:contentDescription="Show Password"
        android:src="@drawable/like" />

</RelativeLayout>
