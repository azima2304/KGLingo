<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    tools:context=".ProfileFragment">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/leftarrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="My profile"
            android:textColor="@color/blue"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/message"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="320dp"
            android:src="@drawable/message1" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/user_progile_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="124dp"
        android:background="@drawable/user_profile"
        android:src="@drawable/userprofile" />

    <TextView
        android:id="@+id/Favourites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_progile_photo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_underline1"
        android:textColor="@color/blue"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Favourites"
        android:padding="20dp"
        android:paddingStart="30dp" />

    <ImageView
        android:id="@+id/like_photo"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@id/Favourites"
        android:layout_alignBottom="@id/Favourites"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="11dp"
        android:contentDescription="Show Password"
        android:src="@drawable/like" />

    <TextView
        android:id="@+id/teacher_becom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Favourites"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Become a teacher"
        android:background="@drawable/edit_text_underline1"
        android:textColor="@color/blue"
        android:padding="20dp"
        android:paddingStart="30dp" />

    <ImageView
        android:id="@+id/image_teach"
        android:layout_width="58dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@id/teacher_becom"
        android:layout_alignBottom="@id/teacher_becom"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="11dp"
        android:contentDescription="Show Password"
        android:src="@drawable/teach" />




    <TextView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teacher_becom"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_underline1"
        android:textColor="@color/blue"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Settings"
        android:padding="20dp"
        android:paddingStart="30dp" />

    <ImageView
        android:id="@+id/image_settings"
        android:layout_width="58dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@id/settings"
        android:layout_alignBottom="@id/settings"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="11dp"
        android:contentDescription="Show Password"
        android:src="@drawable/settings" />

</RelativeLayout>
