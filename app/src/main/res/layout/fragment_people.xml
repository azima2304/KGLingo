<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context=".PeopleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Mark your class time so that you can be in class on time!"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/button_message"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/message1"
                android:layout_marginStart="30dp"
                />
        </LinearLayout>




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:weightSum="2">

    <LinearLayout
        android:id="@+id/podcast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:padding="20dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/round_back_white10"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/podcast"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/blue"
        android:fontFamily="@font/comfortaa_bold"
        android:textSize="18dp"
        android:text="Podcast"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/words"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:padding="20dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/round_back_white10"
        >
        <ImageView

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/words"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/blue"
            android:fontFamily="@font/comfortaa_bold"
            android:textSize="18dp"
            android:text="Words"/>
    </LinearLayout>


</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/test"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="20dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/round_back_white10"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/test"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textSize="18dp"
                    android:text="Test"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/articel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="20dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/round_back_white10"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/newspaper"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textSize="18dp"
                    android:text="Articel"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</FrameLayout>