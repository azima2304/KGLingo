<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <solid android:color="#1AFF9900" /> <!-- Цвет тени (например, полупрозрачный черный) -->
        </shape>
    </item>
    <!-- Background -->
    <item android:top="0dp" android:right="5dp" android:bottom="10dp" android:left="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/yellow" /> <!-- Цвет вашего фона -->
            <corners android:radius="25dp" />
        </shape>
    </item>
</layer-list>
